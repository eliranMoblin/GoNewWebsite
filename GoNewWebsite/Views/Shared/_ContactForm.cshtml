
@using Entities.Website
@using GoNewWebsite.Helpers
@using GoNewWebsite.Models
@using Web;
@{
    var model=new ContactUsViewModel();               
}
    
@using (Ajax.BeginForm("Submit", "Home", FormMethod.Post, new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess", OnFailure = "OnFailure", OnBegin = "onBeginSubmit" }, new { @class = "form-inline justify-content-center" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
<div class="col-md-3">
    <div class="input-group mb-2">
        @Html.TextBoxFor(m => model.FullName, new { placeholder = @Html.DisplayNameFor(m => model.FullName), @class = "form-control " })
        @Html.ValidationMessageFor(m => model.FullName, "", new { @class = "error-label active text-danger " })
    </div>
</div>
    <div class="col-md-3">
        <div class="input-group mb-2">
            
            @Html.TextBoxFor(m => model.Email, new {placeholder = @Html.DisplayNameFor(m => model.Email), @class = "form-control ", @type = "email"})
            @Html.ValidationMessageFor(m => model.Email, "", new {@class = "error-label active text-danger "})

        </div>
    </div>
    <div class="col-md-3">
        <div class="input-group mb-2">
            @Html.TextBoxFor(m => model.PhoneNumber, new {placeholder = @Html.DisplayNameFor(m => model.PhoneNumber), @class = "form-control ", @type = "tel",maxlength=10})
            @Html.ValidationMessageFor(m => model.PhoneNumber, "", new {@class = "error-label active text-danger "})
        </div>
    </div>
    <div class="col-md-3  btn-form">
        <button type="submit" class="btn btn-primary ">Go</button>
    </div>



}
