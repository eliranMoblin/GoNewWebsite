        <p class="ourCustomer">משרות פתוחות </p>

    </div>
    <div class="row">
        <div class=" col-md-6">

        </div>
        <div class=" col-md-6">
            <a href="#requirement" class="js-scroll-trigger">
                <div class="chevron"></div>
                <div class="chevron"></div>
                <div class="chevron"></div>
            </a>

        </div>
    </div>
</section>

<section class="page-section container" id="requirement">
    <div class="row">
        <div class="container-fluid">
            <div class="container">
                <h2 class="about_office"> דרישות</h2>

                <div class="col-sm-10  offset-sm-1">
                    <div class="requirement">
                        <p class="about_office_text">
