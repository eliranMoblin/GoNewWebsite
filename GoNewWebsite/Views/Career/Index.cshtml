            </a>

        </div>
    </div>

</section>


<section class="page-section container-fluid" id="openPosition">
    <div class="DVideo"></div>

    
    <div class="container">
        <h2 class="about_office">Open Positions </h2>
        @foreach (var row in Model.ToArray().Split(3))
        {

            <div class="row justify-content-center">

                @foreach (var item in row)
                {

                    <div class="col-md-4 mb-4 card-job">

                        <a class="hrefPosition" href="@Url.Action("Position", new {positionId = @item.Uid})">

                            <img src="~/Images/Shape 4331.png" class="img-fluid image-carr">
                            <div class="card-caption">
                                @item.Name
                            </div>


                        </a>
                    </div>
                }
            </div>
        }
    </div>

