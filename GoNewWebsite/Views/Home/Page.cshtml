@using Entities.Website
@model Entities.Website.WebsitePage
@{
    var nextSection = new Section();
    }

@foreach (var sections in Model.Section.OrderBy(x=>x.OrderId))
{
    if (sections.SectionType==SectionType.Universal)
    {
        <section class="page-section container" id="@sections.IdName">
            
            <div class="row">
                <div class="container-fluid">
                    <div class="container">
                        <div class="section-header">
                            <p class="section-header"> @sections.Header</p>

                        </div>


                        <div class="col-sm-10  offset-sm-1">
                            <p class="about_office_text">
                                @sections.Content
                                @*  להביל את הלקוחות שלנו להצלחה עסקית בשותפות, אחריות וחתירה מתמדת לאיתור מנועי צמיחה חדשים שמנפצים את תקרת הזכוכית להביל את הלקוחות שלנו להצלחה עסקית בשותפות, אחריות וחתירה מתמדת לאיתור מנועי צמיחה חדשים שמנפצים את תקרת הזכוכית*@
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class=" col-md-6">
                </div>
                <div class=" col-md-6">


                    @if (@Model.Section.SingleOrDefault(x => x.OrderId == sections.OrderId + 1) != null)
                    {
                        <a href="#@Model.Section.SingleOrDefault(x => x.OrderId == sections.OrderId + 1).IdName" class="js-scroll-trigger">
                            <div class="chevron"></div>
                            <div class="chevron"></div>
                            <div class="chevron"></div>
                        </a>
                    }

                </div>
            </div>
        </section>
        
    }
}